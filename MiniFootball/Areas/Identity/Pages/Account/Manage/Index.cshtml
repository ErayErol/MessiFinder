@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
    var photoPath = "~/Images/" + (Model.Input.PhotoPath ?? "no-user.jpg");
}

<div class="box box-large box-acount-manage">
    <form id="profile-form" method="post" enctype="multipart/form-data">
        <div class="input-container">
            <label asp-for="Input.Photo"></label>
            <input asp-for="Input.Photo" type="file" class="btn mt-2 mb-3" />
            <span asp-validation-for="Input.Photo" class="small text-danger"></span>
        </div>
        <img src="@photoPath" class="img-thumbnail" asp-append-version="true" />
        <div class="input-container">
            <label asp-for="Input.Email" class="mb-2 mt-5"></label>
            <input asp-for="Input.Email" class="mt-5" />
            <span asp-validation-for="Input.Email" class="small text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Input.FirstName" class="mb-2"></label>
            <input asp-for="Input.FirstName" class="mt-2" />
            <span asp-validation-for="Input.FirstName" class="small text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Input.LastName" class="mb-2"></label>
            <input asp-for="Input.LastName" class="mt-2" />
            <span asp-validation-for="Input.LastName" class="small text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Input.NickName" class="mb-2"></label>
            <input asp-for="Input.NickName" class="mt-2" />
            <span asp-validation-for="Input.NickName" class="small text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Input.Birthdate" class="mb-2"></label>
            <input asp-for="Input.Birthdate" value="@Model.Input.Birthdate.ToString("dd.MM.yyyy")" type="date" class="mt-2" />
            <span asp-validation-for="Input.Birthdate" class="small text-danger"></span>
        </div>
        <div class="input-container">
            <label asp-for="Input.PhoneNumber" class="mb-2"></label>
            <input asp-for="Input.PhoneNumber" class="mt-2" />
            <span asp-validation-for="Input.PhoneNumber" class="small text-danger"></span>
        </div>
        <button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}