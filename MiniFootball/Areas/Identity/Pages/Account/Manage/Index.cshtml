@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="box box-large box-acount-manage">
    <form id="profile-form" method="post">
        <div class="text-center">
            <h3>@ViewData["Title"]</h3>
        </div>

        <img src="@Model.ImageUrl" class="img-thumbnail" />

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="input-container">
            <label asp-for="Email" class="mb-2 mt-5"></label>
            <input asp-for="Email" class="mt-5" disabled />
        </div>
        <div class="input-container">
            <label asp-for="FirstName" class="mb-2"></label>
            <input asp-for="FirstName" class="mt-2" disabled />
        </div>
        <div class="input-container">
            <label asp-for="LastName" class="mb-2"></label>
            <input asp-for="LastName" class="mt-2" disabled />
        </div>
        <div class="input-container">
            <label asp-for="NickName" class="mb-2"></label>
            <input asp-for="NickName" class="mt-2" disabled />
        </div>
        <div class="input-container">
            <label asp-for="Birthdate" class="mb-2"></label>
            <input asp-for="Birthdate" value="@Model.Birthdate.Value.ToString("dd.MM.yyyy")" type="datetime" class="mt-2" disabled />
        </div>
        <div class="input-container">
            <label asp-for="PhoneNumber" class="mb-2"></label>
            <input asp-for="PhoneNumber" class="mt-2" />
        </div>
        @*<button id="update-profile-button" type="submit" class="btn btn-primary">Save</button>*@
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}