@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <h1 class="text-center mb-4">@ViewData["Title"]</h1>

            <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">
                <div class="form-group my-item-center">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.NickName"></label>
                    <input asp-for="Input.NickName" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.NickName" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.Birthdate"></label>
                    <input asp-for="Input.Birthdate" type="date" class="form-control text-center min-width-size" />
                    <span asp-validation-for="Input.Birthdate" class="text-danger"></span>
                </div>
                <div class="form-group my-item-center">
                    <label asp-for="Input.ImageUrl"></label>
                    <input asp-for="Input.ImageUrl" class="form-control text-center" />
                    <span asp-validation-for="Input.ImageUrl" class="text-danger"></span>
                </div>

                <div class="text-center mt-4 my-item-center">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
