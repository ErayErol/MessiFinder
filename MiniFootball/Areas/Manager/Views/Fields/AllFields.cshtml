@model IEnumerable<FieldListingServiceModel>

@{
    ViewBag.Title = "Management fields";
}

<table class="table table-striped">
    <thead class="thead-dark text-center">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Field Name</th>
            <th scope="col">Country Name</th>
            <th scope="col">City Name</th>
            <th scope="col">Approved</th>
            <th scope="col"></th>
        </tr>
    </thead>
    <tbody class="tbody-green text-center">
        @foreach (var field in Model)
        {
        <tr>
            <td scope="col">@field.Id</td>
            <td scope="col">@field.Name</td>
            <td scope="col">@field.Country.Name</td>
            <td scope="col">@field.City.Name</td>
            @if (field.IsPublic)
            {
                <td scope="col">Yes</td>
            }
            else
            {
                <td style="color: red" scope="col">No</td>
            }
            <td scope="col">
                <a asp-area="" asp-controller="Fields" asp-action="Delete" asp-route-id="@field.Id" asp-route-information="@field.Name" class="btn btn-danger float-right ml-3">Delete</a>
                <a asp-area="" asp-controller="Fields" asp-action="Edit" asp-route-id="@field.Id" asp-route-information="@field.Name" class="btn btn-warning float-right ml-3">Edit</a>
                <a asp-area="" asp-controller="Fields" asp-action="Details" asp-route-id="@field.Id" asp-route-information="@field.Name" class="btn btn-primary float-right ml-3">View</a>
                @if (field.IsPublic)
                {
                    <a asp-area="Manager" asp-controller="Fields" asp-action="ChangeVisibility" asp-route-id="@field.Id" class="btn float-right ml-3">Show</a>
                }
                else
                {
                    <a asp-area="Manager" asp-controller="Fields" asp-action="ChangeVisibility" asp-route-id="@field.Id" class="btn btn-danger float-right ml-3">Hide</a>
                }
            </td>
        </tr>
        }
    </tbody>
</table>