@model GameDeleteServiceModel

@{
    ViewBag.Title = "Delete Game";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5">
            
            <div class="card mb-4 img-thumbnail">
                <img class="card-img-top" src="@Model.FieldImageUrl" alt="@Model.FieldName">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <div class="card-title h4-like">@Model.FieldName</div>
                    </div>
                    <h6 class="card-title">Place : @Model.FieldCountryName, @Model.FieldCityName</h6>
                    <h6 class="card-title mb-4">Date : @Model.Date.ToString("d") @Model.Time:00</h6>
                    <h3 class="card-title mb-4 text-danger">Are you sure you want to delete this game?</h3>
                    <form method="post" class="form-group mt-2">
                        <div class="my-item-center">
                            <a asp-controller="Games" asp-action="Details" asp-route-gameId="@Model.GameId" asp-route-information="@Model.FieldName" class="btn btn-primary btn-block text-uppercase mb-3 min-width-size">No, my mistake!</a>
                        </div>
                        <div class="my-item-center">
                            <input class="btn btn-danger min-width-size text-uppercase" type="submit" value="Yes, delete!" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>