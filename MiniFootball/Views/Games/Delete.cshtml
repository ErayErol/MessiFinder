@model GameIdUserIdServiceModel

@{
    ViewBag.Title = "Delete Game";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5">

            <h3 class="mt-3 mb-3 text-center">Are you sure you want to delete this game</h3>

            <form method="post" class="form-group">

                <div class="my-item-center">
                    <a href="/Games/Details?gameId=@Model.GameId" class="btn btn-primary btn-block text-uppercase mb-3 min-width-size">No, my mistake!</a>
                </div>

                <div class="my-item-center">
                    <input class="btn-danger min-width-size btn text-uppercase" type="submit" value="Yes, delete!" />
                </div>

            </form>

        </div>
    </div>
</div>