@model CreateGameSecondStepViewModel

<div class="col-sm-10 ml-sm-5">

    <div class="form-group row text-center">
        <h3 class="mt-3 ml-3">Fields in @Model.CountryName - @Model.CityName</h3>
    </div>

    <form method="post">
        <div class="form-group row">
            <label asp-for="FieldId" class="col-form-label col-sm-5"></label>
            <div class="col-sm-10">
                <select asp-for="FieldId" class="form-control custom-select mr-sm-5">
                    @foreach (var field in Model.Fields)
                    {
                        <option value="@field.Id">@field.Name</option>
                    }
                </select>
            </div>
        </div>

        <div class="form-group row">
            <input class="btn btn-form-size ml-3" type="submit" value="Next" />
        </div>
    </form>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}