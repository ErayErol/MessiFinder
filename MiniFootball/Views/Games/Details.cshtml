@model GameFormModel

@{
    ViewBag.Title = "Details Game";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5">
            <form method="post" class="form-group">

                @if (Model.HasPlaces)
                {
                    @if (Model.IsUserAlreadyJoin || Model.UserId == User.Id() || User.IsManager())
                    {
                        @if (Model.IsUserAlreadyJoin)
                        {
                            <h3 class="text-center mb-4 mt-5">You already join to this game</h3>
                        }
                        else
                        {
                            <a href="/Games/AddUserToGame?id=@Model.Id" class="btn btn-primary btn-block text-uppercase mb-3">Join Game</a>
                        }
                        <a href="/Games/SeePlayers?id=@Model.Id" class="btn btn-primary btn-block text-uppercase mb-3">See the list of players</a>
                    }
                    else
                    {
                        @if (Model.Places < 5)
                        {
                            <h3 class="text-center mb-4 mt-5">Hurry up! Only @Model.Places Free Places</h3>
                        }
                        else
                        {
                            <h3 class="text-center mb-4 mt-5">You are lucky there are @Model.Places Free Places</h3>
                        }
                        <a href="/Games/AddUserToGame?id=@Model.Id" class="btn btn-primary btn-block text-uppercase mb-3">Join Game</a>
                    }
                }
                else
                {
                    <h3 class="text-center mb-4 mt-5">There are no places</h3>
                    <a href="/Games/SeePlayers?id=@Model.Id" class="btn btn-primary btn-block text-uppercase mb-3">See the list of players</a>
                }

                @*<img class="card-img-top mt-5 mb-5" src="@Model.Field.ImageUrl" alt="@Model.Field.Name @Model.Field.Country - @Model.Field.City">*@

                <h3 class="text-center mb-1 mt-5">Contacts:</h3>

                <div class="form-group">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" readonly="readonly" type="tel" class="form-control" value="@Model.PhoneNumber">
                </div>

                <div class="form-group">
                    <label asp-for="FacebookUrl"></label>
                    <input asp-for="FacebookUrl" readonly="readonly" type="tel" class="form-control" value="@Model.FacebookUrl">
                </div>

                <h3 class="text-center mb-1 mt-5">Details:</h3>

                <div class="form-group">
                    <label asp-for="Date">Date</label>
                    <input asp-for="Date" type="datetime" readonly class="form-control" value="@Model.Date.Value.ToString("d")">
                </div>
                
                <div class="form-group">
                    <label asp-for="Time">Time</label>
                    <input asp-for="Time" readonly="readonly" type="text" class="form-control" value="@Model.Time.Value:00">
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfPlayers"></label>
                    <input asp-for="NumberOfPlayers" readonly="readonly" type="number" class="form-control" value="@Model.NumberOfPlayers.Value">
                </div>

                <div class="form-group">
                    <label asp-for="Places"></label>
                    <input asp-for="Places" readonly="readonly" type="number" class="form-control" value="@Model.Places">
                </div>

                <div class="mt-4 mb-3 createPlaygroundChechboxes">
                    <input class="checkbox-down" asp-for="Ball" type="checkbox" value="@Model.Ball" onclick="return false;">
                    <label asp-for="Ball"></label>

                    <input class="checkbox-down" asp-for="Jerseys" type="checkbox" value="@Model.Jerseys" onclick="return false;">
                    <label asp-for="Jerseys"></label>

                    <input class="checkbox-down" asp-for="Goalkeeper" type="checkbox" value="@Model.Goalkeeper" onclick="return false;">
                    <label asp-for="Goalkeeper"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="2" readonly="readonly"></textarea>
                </div>
            </form>
        </div>
    </div>
</div>