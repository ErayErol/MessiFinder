@model GameFormModel

@{
    ViewBag.Title = "Details Game";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5">
            <h3 class="mt-3 mb-3 text-center">Details</h3>

            <form method="post" class="form-group">


                <div class="form-group">
                    <label asp-for="Date"></label>
                    <input asp-for="Date" type="datetime" readonly placeholder="Click on calendar" class="form-control" value="@Model.Date.Value.ToString("g")">
                </div>

                <div class="form-group">
                    <label asp-for="NumberOfPlayers"></label>
                    <input asp-for="NumberOfPlayers" readonly="readonly" type="number" class="form-control" value="@Model.NumberOfPlayers.Value">
                </div>

                <div class="form-group">
                    <label asp-for="Places"></label>
                    <input asp-for="Places" readonly="readonly" type="number" class="form-control" value="@Model.Places">
                </div>

                <div class="mt-4 mb-3 createPlaygroundChechboxes">
                    <input class="checkbox-down" asp-for="Ball" type="checkbox" value="@Model.Ball" onclick="return false;">
                    <label asp-for="Ball"></label>

                    <input class="checkbox-down" asp-for="Jerseys" type="checkbox" value="@Model.Jerseys" onclick="return false;">
                    <label asp-for="Jerseys"></label>

                    <input class="checkbox-down" asp-for="Goalkeeper" type="checkbox" value="@Model.Goalkeeper" onclick="return false;">
                    <label asp-for="Goalkeeper"></label>
                </div>

                <div class="mb-3">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control" rows="2" readonly="readonly"></textarea>
                </div>

                <a href="/Games/AddUserToGame?id=@Model.Id" class="btn btn-primary btn-block text-uppercase">Join</a>
            </form>
        </div>
    </div>
</div>