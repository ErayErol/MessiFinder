@model GameFormModel

@{
    ViewBag.Title = "Create Game";
}

@if (Model == null)
{
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="https://thumbs.dreamstime.com/b/comic-boom-oops-icon-simple-black-style-illustration-web-122999699.jpg" alt="Just oops image">
            <div class="card-body text-center">
                <h5 class="card-title text-center">Only admins can create games</h5>
                <a href="/Admins/Become" class="btn">Become Admin</a>
            </div>
        </div>
    </div>
}
else
{
    <partial name="_GameFormPartial" model="@Model" />
}


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}