@model CityFormModel

@{
    ViewBag.Title = "Create City";
}

<img class="background-image" src="~/images/old-trafford.jpg" />

@if (@Model == null)
{
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="https://thumbs.dreamstime.com/b/comic-boom-oops-icon-simple-black-style-illustration-web-122999699.jpg" alt="Just oops image">
            <div class="card-body text-center">
                <h5 class="card-title text-center">Only admins can create games</h5>
                <a asp-controller="Admins" asp-action="Become" class="btn">Become Admin</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-4 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-4">
                <h3 class="mt-3 mb-3 text-center">Create City</h3>

                <form method="post">
                    <div class="form-group my-item-center">
                        <label asp-for="CountryName"></label>
                        <select asp-for="CountryName" class="form-control min-width-size my-selected-box-center">
                            @foreach (var country in Model.Countries)
                            {
                                @if (country == "Bulgaria")
                                {
                                    <option selected="selected" value="@country"> @country </option>
                                }
                                else
                                {
                                    <option value="@country"> @country </option>
                                }
                            }
                        </select>
                    </div>

                    <div class="form-group my-item-center">
                        <label asp-for="Name"></label>
                        <input asp-for="Name" type="text" class="form-control min-width-size alphaonly text-center">
                        <span asp-validation-for="Name" class="small text-danger"></span>
                    </div>

                    <div class="my-item-center">
                        <input class="btn float-right min-width-size-btn" type="submit" value="Create" />
                    </div>
                </form>
            </div>
        </div>
    </div>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}