@model List<GameListingServiceModel>

@{
    ViewBag.Title = "Welcome to Mini Football";
}

<div class="row mt-4 ml-0">
    <div class="col-md-5 pl-5 pr-5">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title text-center" id="total-games"></h5>
                <h5 class="card-title text-center" id="total-fields"></h5>
                <h5 class="card-title text-center" id="total-users"></h5>
            </div>
        </div>
    </div>
</div>

@if (Model.Any())
{
    <div class="mb-4"></div>

    <div id="carouselExampleControls" class="carousel slide col-md-9" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Count; i++)
            {
                var game = Model[i];

                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="@game.Field.ImageUrl" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="text-center">
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn">@game.Field.Name - @game.Date.ToString("D") @game.Time:00</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}

@section Scripts {
    <script>
        $.get('/api/statistics', (data) => {
            $('#total-games').text(data.totalGames + " Games");
            $('#total-fields').text(data.totalFields + " Fields");
            $('#total-users').text(data.totalUsers + " Users");
        });
    </script>
}