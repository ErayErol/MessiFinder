@model IndexViewModel

@{
    ViewBag.Title = "Welcome to Mini Football";
}

<div class="row mt-4 ml-0">
    <div class="col-md-5 pl-5 pr-5">
        <div class="card">
            <div class="card-body text-center">
                <h5 class="card-title text-center">@Model.TotalGames Games</h5>
                <h5 class="card-title text-center">@Model.TotalPlaygrounds Playgrounds</h5>
                <h5 class="card-title text-center">@Model.TotalUsers Users</h5>
            </div>
        </div>
    </div>
</div>

@if (Model.Games.Any())
{
    <div class="mb-4"></div>

    <div id="carouselExampleControls" class="carousel slide col-md-9" data-ride="carousel">
        <div class="carousel-inner">
            @for (int i = 0; i < Model.Games.Count; i++)
            {
                var game = Model.Games[i];

                <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                    <img class="d-block w-100" src="@game.Playground.ImageUrl" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <div class="text-center">
                            <a asp-controller="Games" asp-action="Details" asp-route-id="@game.Id" class="btn">@game.Playground.Name - @game.Date.ToString("D") @game.Date.ToString("t")</a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
}