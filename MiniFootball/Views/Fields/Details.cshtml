@model FieldDetailServiceModel

@{
    ViewBag.Title = "Field Details";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-10 col-md-8 col-lg-6 col-xl-5">
            <form method="post" class="form-group">

                <img class="card-img-top img-thumbnail mt-5 mb-5" src="@Model.ImageUrl" alt="@Model.Name @Model.CountryName - @Model.CityName">

                <h3 class="text-center mb-3">Contacts:</h3>

                <div class="form-group my-item-center">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" readonly="readonly" type="tel" class="form-control text-center" value="@Model.PhoneNumber">
                </div>

                <h3 class="text-center mb-3 mt-4">Details:</h3>

                <div class="form-group my-item-center">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" readonly="readonly" type="tel" class="form-control text-center" value="@Model.Name">
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="CountryName"></label>
                    <input asp-for="CountryName" readonly="readonly" type="tel" class="form-control text-center" value="@Model.CountryName">
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="CityName"></label>
                    <input asp-for="CityName" readonly="readonly" type="tel" class="form-control text-center" value="@Model.CityName">
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" readonly="readonly" type="tel" class="form-control text-center" value="@Model.Address">
                </div>

                <div class="mb-3 my-item-center">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control text-center" rows="2" readonly="readonly"></textarea>
                </div>

                <div class="mt-4 mb-3 createPlaygroundChechboxes">
                    <input class="checkbox-down" asp-for="Parking" type="checkbox" value="@Model.Parking" onclick="return false;">
                    <label asp-for="Parking"></label>

                    <input class="checkbox-down" asp-for="Shower" type="checkbox" value="@Model.Shower" onclick="return false;">
                    <label asp-for="Shower"></label>

                    <input class="checkbox-down" asp-for="ChangingRoom" type="checkbox" value="@Model.ChangingRoom" onclick="return false;">
                    <label asp-for="ChangingRoom"></label>

                    <input class="checkbox-down" asp-for="Cafe" type="checkbox" value="@Model.Cafe" onclick="return false;">
                    <label asp-for="Cafe"></label>
                </div>
            </form>
        </div>
    </div>
</div>