@model FieldEditFormModel

@{
    ViewBag.Title = "Edit Field";
}

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-11 col-sm-9 col-md-8 col-lg-6 col-xl-5">

            <form method="post" class="form-group">
                <div class="form-group mb-3 my-item-center">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" type="text" class="form-control text-center min-width-size">
                    <span asp-validation-for="Name" class="small text-danger"></span>
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="PhoneNumber"></label>
                    <input asp-for="PhoneNumber" type="text" class="form-control text-center min-width-size">
                    <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" type="text" class="form-control text-center">
                    <span asp-validation-for="Address" class="small text-danger"></span>
                </div>

                <div class="form-group my-item-center">
                    <label asp-for="ImageUrl"></label>
                    <input asp-for="ImageUrl" class="form-control text-center">
                    <span asp-validation-for="ImageUrl" class="small text-danger"></span>
                </div>

                <div class="mb-3 my-item-center">
                    <label asp-for="Description"></label>
                    <textarea asp-for="Description" class="form-control text-center" rows="3"></textarea>
                    <span asp-validation-for="Description" class="small text-danger"></span>
                </div>

                <div class="mt-4 mb-3 createPlaygroundChechboxes">
                    <input class="checkbox-down" asp-for="Parking" type="checkbox">
                    <label asp-for="Parking">Parking</label>

                    <input class="checkbox-down" asp-for="Shower" type="checkbox">
                    <label asp-for="Shower">Shower</label>

                    <input class="checkbox-down" asp-for="ChangingRoom" type="checkbox">
                    <label asp-for="ChangingRoom">Changing Room</label>

                    <input class="checkbox-down" asp-for="Cafe" type="checkbox">
                    <label asp-for="Cafe">Cafe</label>
                </div>

                <div class="my-item-center">
                    <input class="btn btn-success min-width-size-btn" type="submit" value="Edit" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}