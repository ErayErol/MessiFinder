@model IEnumerable<FieldServiceModel>

@{
    ViewBag.Title = "My Fields";
    ViewBag.AllowCarEdit = true;
}

@if (Model.Any() == false)
{
    <div class="col-md-4">
        <div class="card">
            <img class="card-img-top" src="https://thumbs.dreamstime.com/b/comic-boom-oops-icon-simple-black-style-illustration-web-122999699.jpg" alt="Just oops image">
            <div class="card-body text-center">
                <h5 class="card-title text-center">You do not have fields</h5>
                <a href="/Fields/Create" class="btn">Create Field</a>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <partial name="_FieldPartial" model="@Model" />
    </div>
}
