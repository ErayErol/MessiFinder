@model PlaygroundListingViewModel

<div class="container">
    <div class="row">
        <div class="offset-1 offset-sm-1 offset-md-2 offset-lg-3 offset-xl-3 col-10 col-sm-9 col-md-8 col-lg-6 col-xl-5">
            @if (@Model.Country == null || @Model.Town == null || @Model.Playgrounds.Any() == false)
            {
                <div class="col-md-9 offset-sm-1 offset-md-1 offset-lg-2 offset-xl-2">
                    <div class="card">
                        <img class="card-img-top" src="https://thumbs.dreamstime.com/b/comic-boom-oops-icon-simple-black-style-illustration-web-122999699.jpg" alt="Just oops image">
                        <div class="card-body text-center">
                            <h5 class="card-title text-center">There are no playgrounds in this town</h5>
                            <a href="/Playgrounds/Create" class="btn">Create Playground</a>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <h5 class="mt-3 mb-3 green">Playgrounds in @Model.Country - @Model.Town</h5>

                <form method="post">
                    <div class="form-group">
                        <label asp-for="PlaygroundId">Select playground:</label>
                        <select asp-for="PlaygroundId" class="form-control">
                            @foreach (var playground in Model.Playgrounds)
                            {
                                <option value="@playground.PlaygroundId">@playground.Name</option>
                            }
                        </select>
                    </div>

                    <input class="btn float-right" type="submit" value="Next"/>
                </form>
            }
        </div>
    </div>
</div>